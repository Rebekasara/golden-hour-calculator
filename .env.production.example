# Production Environment Configuration
# Copy this to .env.production.local for production builds

# Database - Use a production database service
DATABASE_URL="postgresql://username:password@host:port/database"
# Alternative: MySQL
# DATABASE_URL="mysql://username:password@host:port/database"

# Next.js Authentication - CRITICAL: Generate a new secret for production
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="REPLACE-WITH-SECURE-SECRET-FOR-PRODUCTION"
# Set to your actual production domain
NEXTAUTH_URL="https://your-golden-hour-app.vercel.app"

# Base URL - Set to your production domain
NEXT_PUBLIC_BASE_URL="https://your-golden-hour-app.vercel.app"

# OpenWeatherMap API - Required for weather data
NEXT_PUBLIC_OPENWEATHER_API_KEY="your-production-openweather-key"

# Image APIs - Optional but recommended for full functionality
UNSPLASH_ACCESS_KEY="your-production-unsplash-key"
UNSPLASH_APPLICATION_ID="your-unsplash-app-id"
UNSPLASH_SECRET_KEY="your-unsplash-secret"
PEXELS_API_KEY="your-production-pexels-key"

# Production optimizations
NODE_ENV="production"
NEXT_TELEMETRY_DISABLED=1

# Security headers (handled by vercel.json but can be overridden)
# VERCEL_ENV="production"
# VERCEL_URL will be automatically set by Vercel